{

  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "exclude": ["node_modules", "tests", "jest.config.ts"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "types": ["node", "jest"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }

}